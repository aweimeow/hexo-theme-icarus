/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-1-column .container, .is-2-column .container
        max-width: $desktop - 2 * $gap
        width: $desktop - 2 * $gap

    article.article
        .content
            font-size: 1.2rem;

+fullhd()
    .is-2-column .container
        max-width: $widescreen
        width: $widescreen

    .is-1-column .container
        max-width: $desktop - 2 * $gap
        width: $desktop - 2 * $gap

    article.article
        .content
            font-size: 1.2rem;

+tablet()
    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            align-self: flex-start
            position: -webkit-sticky
            position: sticky
            top: .75rem

    .column-right-shadow
        &.is-sticky
            top: 1.5rem

    article.article
        .content
            font-size: 1.1rem;

+mobile()
    .section
        padding: 1.5rem 1rem
